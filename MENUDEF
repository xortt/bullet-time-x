OptionMenu "BtSound"
{
    Title "Sound"

    TooltipSlider "$OPTION_TITLE_MUSIC_VOLUME_DURING_BT", "$OPTION_DESC_MUSIC_VOLUME_DURING_BT", "", "bt_music_volume", 0.00, 1.00, 0.05, 2

    StaticText " "
    TooltipOption "$OPTION_TITLE_BT_START_SOUND", "$OPTION_DESC_BT_START_SOUND", "", "bt_sound_start_type", "BtSoundTypes"
    TooltipOption "$OPTION_TITLE_BT_SHOOTDODGE_SOUND", "$OPTION_DESC_BT_SHOOTDODGE_SOUND", "", "bt_sound_dodge_type", "BtSoundDodgeTypes"
    TooltipOption "$OPTION_TITLE_BT_LOOP_SOUND", "$OPTION_DESC_BT_LOOP_SOUND", "", "bt_sound_loop_type", "BtSoundLoopTypes"
    TooltipOption "$OPTION_TITLE_BT_STOP_SOUND", "$OPTION_DESC_BT_STOP_SOUND", "", "bt_sound_stop_type", "BtSoundTypes"

    StaticText " "
}

