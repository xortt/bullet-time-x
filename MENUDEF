AddOptionMenu "ModOptionsMenu"
{
    ModHeader "Bullet Time X", "@Xortt", "$MOD_DESCRIPTION", "BTLOGO", "$MOD_README"
    Submenu "Bullet Time X Options", "BtOptions"
}

OptionMenu "BtOptions"
{
    Control "$CONTROL_TITLE_BULLET_TIME", "bullettime"
    Control "$CONTROL_TITLE_BULLET_TIME_SHOOTDODGE", "bullettime_dodge"

    StaticText " "

    TooltipCommand "$OPTION_TITLE_HANDLER_RELOAD", "$OPTION_DESC_HANDLER_RELOAD", "", "bullettime_handler_reload"
    TooltipCommand "$OPTION_TITLE_HANDLER_REMOVE", "$OPTION_DESC_HANDLER_REMOVE", "", "bullettime_handler_remove"

    StaticText " "

    Submenu "Adrenaline System", "BtAdrenalineSystem"
    Submenu "Time Multipliers", "BtTimeMultipliers"
    Submenu "HUD and Display", "BtHudDisplay"
    Submenu "Music and Sound", "BtSound"
}

OptionMenu "BtAdrenalineSystem"
{
    Title "Adrenaline System"

    TooltipOption "$OPTION_TITLE_ADRENALINE_UNLIMITED", "$OPTION_DESC_ADRENALINE_UNLIMITED", "", "bt_adrenaline_unlimited", "OnOff"
    TooltipSlider "$OPTION_TITLE_ADRENALINE_DURATION", "$OPTION_DESC_ADRENALINE_DURATION", "", "bt_adrenaline_duration", 5, 120, 5, 0
    
    StaticText " "

    TooltipSlider "$OPTION_TITLE_ADRENALINE_REGEN_SPEED", "$OPTION_DESC_ADRENALINE_REGEN_SPEED", "", "bt_adrenaline_regen_speed", 0, 35, 1, 0

    StaticText " "

    TooltipOption "$OPTION_TITLE_ADRENALINE_KILL_REWARD_WHEN_ACTIVE", "$OPTION_DESC_ADRENALINE_KILL_REWARD_WHEN_ACTIVE", "", "bt_adrenaline_kill_reward_when_active", "OnOff"
    TooltipSlider "$OPTION_TITLE_ADRENALINE_KILL_REWARD_MULTIPLIER", "$OPTION_DESC_ADRENALINE_KILL_REWARD_MULTIPLIER", "", "bt_adrenaline_kill_reward_multiplier", 0, 10, 0.2, 1
    TooltipSlider "$OPTION_TITLE_ADRENALINE_PLAYER_DAMAGE_REWARD_MULTIPLIER", "$OPTION_DESC_ADRENALINE_PLAYER_DAMAGE_REWARD_MULTIPLIER", "", "bt_adrenaline_player_damage_reward_multiplier", 0, 10, 0.2, 1

    StaticText " "
}

